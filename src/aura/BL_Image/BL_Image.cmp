<aura:component
        description="BL_Image"
        controller="BL_ImageController"
>

    <aura:attribute name="parentId" type="String" access="public" required="true"/>
    <aura:attribute name="isEditable" type="Boolean" access="public" default="false"/>
    <aura:attribute name="fileName" type="String" access="public" required="true"/>
    <aura:attribute name="width" type="String" access="public" default="200px"/>
    <aura:attribute name="height" type="String" access="public" default="200px"/>
    <aura:attribute name="fileSrc" type="String" access="private"/>
    <aura:attribute name="fileContentType" type="String"/>
    <aura:attribute name="fileBody" type="String"/>
    <aura:attribute name="showSpinner" type="Boolean" access="private" default="true"/>

    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>

    <aura:if isTrue="{!v.showSpinner}">
        <div class="slds-is-relative" style="{!'width: ' + v.width + '; height: ' + v.height + ';'}">
            <lightning:spinner size="small" variant="brand"/>
        </div>
    </aura:if>
    <aura:if isTrue="{!not(v.showSpinner)}">
        <aura:if isTrue="{!v.isEditable}">
            <div ondragover="{!c.onDragOver}" ondrop="{!c.onDrop}" class="slds-is-relative" aura:id="uploadDiv">
                <img
                        src="{!v.fileSrc}"
                        style="{!'width: ' + v.width + '; height: ' + v.height + '; cursor: pointer;'}"
                        alt="{!v.name}"
                />
            </div>
        </aura:if>
        <aura:if isTrue="{!not(v.isEditable)}">
            <img
                    src="{!v.fileSrc}"
                    style="{!'width: ' + v.width + '; height: ' + v.height}"
                    alt="{!v.name}"
            />
        </aura:if>
    </aura:if>
</aura:component>
