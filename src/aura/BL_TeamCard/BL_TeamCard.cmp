<aura:component description="BL_TeamCard">
    <aura:attribute name="teamName" type="String"/>
    <aura:attribute name="teamObject" type="List"/>
    <aura:attribute name="player1Name" type="String"/>
    <aura:attribute name="player2Name" type="String"/>
    <aura:attribute name="dockingSide" type="String" default="left"/>
    <aura:attribute name="teamFinalScoreColorStyle" type="String"/>

    <div class="{!'slds-panel slds-size_full slds-panel_docked slds-panel_docked-'+v.dockingSide+' slds-is-open '+v.teamFinalScoreColorStyle+'-box-shadow'}" aria-hidden="false">
        <div class="slds-panel__header slds-color__background_gray-3" >
            <h2 class="slds-panel__header-title slds-text-heading_small ">
                <lightning:tile label="{!v.teamName}" href="">
                    <aura:set attribute="media">
                        <lightning:avatar src="/docs/component-library/app/images/examples/avatar1.jpg"
                                          fallbackIconName="utility:activity" size="small"/>
                    </aura:set>
                    <!--<ul class="slds-list_horizontal slds-has-dividers_right">-->
                    <!--<li class="slds-item">Billionaire, Gotham City</li>-->
                    <!--<li class="slds-item">Dark Knight</li>-->
                    <!--</ul>-->
                </lightning:tile>
            </h2>

        </div>
        <div class="slds-panel__body">
            <div class="slds-media__body">

                <ul class="slds-has-dividers--bottom-space">
                    <li class="slds-item">
                        <div class="slds-tile slds-media">
                            <div class="slds-media__figure">

                            </div>
                            <div class="slds-media__body">
                                <div class="slds-text-heading_medium">
                                    <lightning:tile label="{!v.teamObject.Player1__r.Name}" href="">
                                        <aura:set attribute="media">
                                            <lightning:avatar variant="circle"
                                                              src="/docs/component-library/app/images/examples/avatar1.jpg"
                                                              fallbackIconName="utility:user"/>
                                        </aura:set>
                                    </lightning:tile>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="slds-item">
                        <div class="slds-tile slds-media">
                            <div class="slds-media__figure">

                            </div>
                            <div class="slds-media__body">
                                <div class="slds-text-heading_medium">
                                    <lightning:tile label="{!v.teamObject.Player2__r.Name}" href="">
                                        <aura:set attribute="media">
                                            <lightning:avatar variant="circle"
                                                              src="/docs/component-library/app/images/examples/avatar1.jpg"
                                                              fallbackIconName="utility:user"/>
                                        </aura:set>

                                    </lightning:tile>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</aura:component>
