<apex:page showHeader="false" sidebar="false" standardController="Opportunity">

	<apex:pageBlock >
		<apex:pageBlockSection columns="1" collapsible="false">
			<apex:pageBlockSectionItem >
				<apex:outputLabel value="{!$Label.ASAP}"/>
				<apex:outputField value="{!Opportunity.ASAP__c}"/>
			</apex:pageBlockSectionItem>
			<apex:pageBlockSectionItem >
				<apex:outputLabel value="{!$Label.WorkStart}"/>
				<apex:outputPanel >
					<apex:outputLabel value="{!DAY(TODAY())}/{!MONTH(TODAY())}/{!YEAR(TODAY())}" rendered="{!Opportunity.ASAP__c}"/>
					<apex:outputLabel value="{!DAY(Opportunity.OpportunityStart__c)}/{!MONTH(Opportunity.OpportunityStart__c)}/{!YEAR(Opportunity.OpportunityStart__c)}" rendered="{!!Opportunity.ASAP__c}"/>
				</apex:outputPanel>
			</apex:pageBlockSectionItem>
		</apex:pageBlockSection>
	</apex:pageBlock>
</apex:page>