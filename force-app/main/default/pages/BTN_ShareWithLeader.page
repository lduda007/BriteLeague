<apex:page id="BTN_ShareWithLeader" standardController="Contact" extensions="BTN_ShareWithLeaderControllerExtension">
    <apex:form >
        <apex:pageBlock title="{!title}">

            <apex:pageBlockSection columns="1" >
                <apex:pageBlockSectionItem dataStyle="text-align: center;" >
                    <apex:outputPanel >
                        <apex:outputText style="padding-right: 10px;">Leader: </apex:outputText>
                        <apex:selectList value="{!selectedLeaderName}" multiSelect="false" size="1">
                            <apex:selectOptions value="{!leaderNames}"/>
                        </apex:selectList>
                    </apex:outputPanel>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>

            <div style="text-align: center; margin-top: 20px;">
                <apex:outputPanel >
                    <apex:commandButton action="{!shareWithLeader}" value="Share"/>
                    <apex:commandButton action="{!cancel}" value="Cancel"/>
                </apex:outputPanel>
            </div>
        </apex:pageBlock>
    </apex:form>
</apex:page>