                    });
            </script>
        </head>
        <body ng-app="myApp">
        <script>
            angular.module('myApp').constant('btnSearchSfdcConf', {
                url : {
                    search : {
                        options: '{!$RemoteAction.AchievementContactsSearchCtrlRmAction.getOptions}',
                        search: '{!$RemoteAction.AchievementContactsSearchCtrlRmAction.search}'
                    }
                }
            });
        </script>
        <div class="bootstrap">
