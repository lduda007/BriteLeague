<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Candidate_Contract_Signed</fullName>
        <description>Candidate Contract Signed</description>
        <protected>false</protected>
        <recipients>
            <field>Project_Manager_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>BritenetSalesTemplates/Candidate_Contract_Signed_Notification</template>
    </alerts>
    <alerts>
        <fullName>Candidate_contract_signed_with_different_external</fullName>
        <description>Candidate contract signed with different external</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>BritenetSalesTemplates/Candidate_Contract_Signed_With_Different_External_Notification</template>
    </alerts>
    <fieldUpdates>
        <fullName>Set_Candidate_Approve_Date</fullName>
        <field>DateApproved__c</field>
        <formula>TODAY()</formula>
        <name>Set Candidate Approve Date</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Candidate Approved</fullName>
        <actions>
            <name>Set_Candidate_Approve_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>TEXT( Status__c ) == &apos;Approved by external&apos; &amp;&amp; TEXT(PRIORVALUE(Status__c)) != &apos;Approved by external&apos;</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
