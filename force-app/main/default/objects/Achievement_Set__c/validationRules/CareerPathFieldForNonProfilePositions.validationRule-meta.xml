<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CareerPathFieldForNonProfilePositions</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 NOT(OR(
  CONTAINS(RecordType.DeveloperName, &apos;Position_Profile&apos;), 
  CONTAINS(RecordType.DeveloperName, &apos;Achievements_Profile&apos;)
 )),
 NOT(ISBLANK(Career_Path__c))
)</errorConditionFormula>
    <errorMessage>Field Career Path cannot be filled for non Postion Profile Sets</errorMessage>
</ValidationRule>
